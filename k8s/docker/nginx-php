FROM 827591039089.dkr.ecr.eu-west-1.amazonaws.com/nightingale-moodle:develop-latest as theme

FROM prlx/prlx-nginx-php-fpm:7.1

RUN mkdir -p /tmp/local-data && chown nobody:nobody /tmp/local-data

ADD k8s/conf/etc/nginx/sites-enabled/site.conf /etc/nginx/sites-enabled/site.conf

ADD k8s/conf/scripts/start-web.sh /start-web.sh
RUN chmod +x /start-web.sh

# Add the source code
ADD / /src
RUN rm -rf /src/k8s && rm -rf /src/config.php
RUN mv /src/config-k8s.php /src/config.php

RUN chown -R nobody:nobody /src

# Add the theme
RUN rm -rf /src/theme/nightingale
COPY --from=theme /theme /src/theme/nightingale